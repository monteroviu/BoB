<h2>Escuelas</h2>
<p align="right">
  <%= link_to 'Añadir escuela', new_school_path, class: "btn btn-outline-secondary" %>
</p>
<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre de la escuela</th>
      <th>Diagnósticos </th>
      <th>Informes generados</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.number_of_diagnoses %></td>
        <td><%= school.generated %></td>
        <td><%= link_to "Ver clases (#{school.groups.count})", school %></td>
        <td><%= link_to 'Editar escuela', edit_school_path(school) %></td>
        <td><%= link_to 'Borrar escuela', school, method: :delete, class:"red", data: { confirm: "¿Estás seguro de que quieres borrar la escuela #{school.name}?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @schools, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
