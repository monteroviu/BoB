<p>
  <strong>Nombre de la escuela:</strong>
  <%= @school.name %>
</p>
<p align="right">
<%= link_to 'Añadir clase', new_school_group_path(@school.id), class: "btn btn-outline-secondary"%>
</p>
<% if @groups.any? %>
  <table class="table table-hover table-bordered table-condensed">
    <thead>
      <tr>
        <th>Clase</th>
        <th>Escuela</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.name %></td>
          <td><%= group.school.name %></td>
          <td><%= link_to "Ver alumnos (#{group.students.count})", school_group_path(@school.id, group.id) %></td>
          <td><%= link_to 'Editar', edit_school_group_path(@school.id, group.id) %></td>
          <td><%= link_to 'Borrar', school_group_path(@school.id, group.id), method: :delete, data: { confirm: "¿Estás seguro de que quieres borrar la clase #{group.name}?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @groups, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
<% else %>
<br>
  <h6> Esta escuela no tiene ninguna clase creada</h6>
<% end %>
<br>
<%= link_to 'Editar', edit_school_path(@school) %> |
<%= link_to 'Regresar a las escuelas', schools_path %>
